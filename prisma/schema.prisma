generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String?
  name      String
  createdAt DateTime  @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ContentItem {
  id           String    @id @default(uuid())
  title        String
  description  String
  script       String
  hashtags     String
  niche        String
  style        String
  type         String
  platform     String
  status       String
  imageUrl     String?
  videoUrl     String?
  thumbnailUrl String?
  publishedUrl String?
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ScheduledPost {
  id           String   @id @default(uuid())
  contentId    String
  platform     String
  scheduledAt  DateTime
  status       String   @default("pending")
  publishedUrl String?
  error        String?
  createdAt    DateTime @default(now())
}

model PlatformAccount {
  id        String   @id @default(uuid())
  platform  String
  name      String
  connected Boolean  @default(false)
  apiKey    String?
  createdAt DateTime @default(now())
}

model ActivityLog {
  id          String   @id @default(uuid())
  type        String
  title       String
  description String
  timestamp   DateTime @default(now())
}

model AutomationConfig {
  id        Int       @id @default(autoincrement())
  enabled   Boolean   @default(false)
  niches    String
  style     String    @default("educational")
  platforms String
  types     String
  frequency String    @default("daily")
  nextRun   DateTime?
}

model SystemSettings {
  id              Int    @id @default(autoincrement())
  openaiKey       String @default("")
  youtubeKey      String @default("")
  tiktokKey       String @default("")
  facebookKey     String @default("")
  geminiKey       String @default("")
  contentTone     String @default("Professional & Engaging")
  contentLength   String @default("medium")
  brandName       String @default("AutoContent AI")
  videoResolution String @default("1080p")
  videoLanguage   String @default("English")
  targetKeywords  String @default("")
  font            String @default("Inter")
  primaryColor    String @default("#0070f3")
  backgroundStyle String @default("solid")
  aiProvider      String @default("gemini")
  customBaseUrl   String @default("https://api.openai.com/v1")
  customKey       String @default("")
  customModel     String @default("gpt-3.5-turbo")
}
